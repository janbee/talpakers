{
  "name": "play-ab-web",
  "version": "0.1.147",
  "homepage": "https://janbee.github.io/talpakers/build",
  "private": true,
  "scripts": {
    "i": "npm install",
    "prepare:husky": "rm -rf .husky & npx husky install && npx husky add .husky/pre-commit \"npm --no-git-tag-version version patch && git add . && yarn build && npx --no-install lint-staged\"",
    "------------------ ----------------------- ------------------": "",
    "dev": "vite",
    "build": "tsc && vite build",
    "format": "prettier --write src-old",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "-------------- API GENERATOR -------------": "",
    "api:gen": "npx @openapitools/openapi-generator-cli generate",
    "----------- COMPONENT GENERATOR ----------": "",
    "gen:domain": "echo 'Enter Domain name in PascalCase' && read cmpName && npx generate-react-cli component $cmpName",
    "gen:common:component": "echo 'Enter Page name in PascalCase' && read cmpName && npx generate-react-cli component $cmpName --type=common",
    "gen:hook:component": "echo 'Enter Page name in CamelCase' && read cmpName && npx generate-react-cli component $cmpName --type=hook",
    "gen:page:component": "echo 'Enter Page name in PascalCase' && read cmpName && npx generate-react-cli component $cmpName --type=page",
    "------------------ git ------------------": "",
    "git:add": "git add .",
    "git:commit": "git commit -a -m 'auto'",
    "git:push": "git push",
    "git:run": "yarn run git:add && yarn run git:commit && yarn run git:push"
  },
  "dependencies": {
    "@types/lodash": "^4.17.4",
    "bson": "^6.2.0",
    "classnames": "^2.5.1",
    "date-fns": "^3.6.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.12",
    "react-router-dom": "6.21.2",
    "realm-web": "^2.0.0",
    "rxjs": "^7.8.1",
    "semantic-ui-css": "^2.5.0",
    "semantic-ui-react": "^3.0.0-beta.0",
    "vite-plugin-mkcert": "^1.17.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^8.0.1",
    "jsdom": "^24.1.0",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.38",
    "pre-commit": "^1.2.2",
    "prettier": "3.2.5",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.6.0-dev.20240607",
    "vite": "^5.2.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.{jsx,ts,tsx,css,md,json}": [
      "git add .",
      "prettier --write './**/*.{ts,tsx}'"
    ]
  }
}
